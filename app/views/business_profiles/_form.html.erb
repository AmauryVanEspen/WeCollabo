<%= simple_form_for(@business_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :logo %>
    <%= f.input :description %>
    <%= f.input :head_count %>
    <%= f.input :website_link %>
    <%= f.input :tag_list %>
    <%= f.input :street %>
    <%= f.input :suburb %>
    <%= f.input :state, collection: ['ACT', 'NSW', 'NT', 'QLD', 'SA', 'TAS', 'VIC', 'WA'] %>
    <%= f.input :postcode %>
    <%= f.input :country, priority: ['Australia', 'United Kingdom'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
